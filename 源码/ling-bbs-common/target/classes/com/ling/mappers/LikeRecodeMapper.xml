<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ling.mappers.LikeRecodeMapper">

    <!-- 通用字段 -->
    <sql id="commonField">
        like_recode_id
        , target_id
        , target_author_id
        , liker_id
        , like_type
        , like_time
    </sql>

    <!-- 查询条件 -->
    <sql id="queryCondition">
        <where>
            <if test="targetId != null">
                target_id = #{targetId}
            </if>
            <if test="likerId != null">
                and liker_id = #{likerId}
            </if>
            <if test="likeType != null">
                and like_type = #{likeType}
            </if>
        </where>
    </sql>

    <!-- 条件分页查询，返回po -->
    <select id="selectByCondition" resultType="com.ling.entity.po.LikeRecode">
        select <include refid="commonField"/> from like_recode
        <include refid="queryCondition"/>
        <if test="orderBy != null and orderBy != ''">
            order by ${orderBy}
        </if>
        <if test="index != null and size != null">
            limit #{index}, #{size}
        </if>
    </select>

    <!-- 条件查询总数量 -->
    <select id="selectCountByCondition" resultType="java.lang.Long">
        select count(0) total from like_recode <include refid="queryCondition"/>
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultType="com.ling.entity.po.LikeRecode">
        select <include refid="commonField"/> from like_recode
    </select>

    <!-- 查询总数量 -->
    <select id="selectCount" resultType="java.lang.Long">
        select count(0) total from like_recode
    </select>

    <!-- 通过id查询 -->
    <select id="selectById" resultType="com.ling.entity.po.LikeRecode">
        select <include refid="commonField"/> from like_recode where like_recode_id = #{likeRecodeId}
    </select>

    <!-- 通过目标id、点赞人、点赞类型查询 -->
    <select id="selectByTargetIdAndLikerIdAndLikeType" resultType="com.ling.entity.po.LikeRecode">
        select <include refid="commonField"/> from like_recode
                where target_id = #{targetId} and
                      liker_id = #{likerId} and
                      like_type = #{likeType}
    </select>

    <!-- 插入 -->
    <insert id="insert">
        insert into like_recode (<include refid="commonField"/>) values (
        #{likeRecodeId},
        #{targetId},
        #{targetAuthorId},
        #{likerId},
        #{likeType},
        #{likeTime})
    </insert>

    <!-- 批量插入 -->
    <insert id="batchInsert">
        insert into like_recode (<include refid="commonField"/>) values
        <foreach collection="list" item="item" separator=",">
            (#{item.likeRecodeId},
            #{item.targetId},
            #{item.targetAuthorId},
            #{item.likerId},
            #{item.likeType},
            #{item.likeTime})
        </foreach>
    </insert>

    <!-- 更新 -->
    <update id="update">
        update like_recode
        <set>
            <if test="targetId != null">target_id = #{targetId},</if>
            <if test="targetAuthorId != null">target_author_id = #{targetAuthorId},</if>
            <if test="likerId != null">liker_id = #{likerId},</if>
            <if test="likeType != null">like_type = #{likeType},</if>
            <if test="likeTime != null">like_time = #{likeTime},</if>
        </set>
        where like_recode_id = #{likeRecodeId}
    </update>

    <!-- 批量更新 -->
    <update id="batchUpdate">
        <foreach collection="list" item="item" separator=";">
            update like_recode
            <set>
                <if test="item.targetId != null">target_id = #{item.targetId},</if>
                <if test="item.targetAuthorId != null">target_author_id = #{item.targetAuthorId},</if>
                <if test="item.likerId != null">liker_id = #{item.likerId},</if>
                <if test="item.likeType != null">like_type = #{item.likeType},</if>
                <if test="item.likeTime != null">like_time = #{item.likeTime},</if>
            </set>
            where like_recode_id = #{item.likeRecodeId}
        </foreach>
    </update>

    <!-- 删除/批量删除 -->
    <delete id="delete">
        delete from like_recode where like_recode_id in
        <foreach collection="list" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
